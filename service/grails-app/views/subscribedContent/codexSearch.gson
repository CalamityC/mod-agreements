import org.olf.kb.TitleInstance
import groovy.transform.*

model {
  Iterable<TitleInstance> results
  Integer totalRecords
}

def meta = ['totalRecords': (totalRecords) ]

json {
  instances (results) { TitleInstance ti ->
    id ti.id
    title ti.name
  }
  resultInfo {
    'totalRecords' totalRecords
  }
}
